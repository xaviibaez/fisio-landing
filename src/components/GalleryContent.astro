---
import { getLangFromUrl, useTranslations, getLocalizedPath, getLangKey } from '../i18n/utils';
import galleryData from '../data/gallery.json';
import GalleryCard from './GalleryCard.astro';

const lang = getLangFromUrl(Astro.url);
const translation = useTranslations(lang);
const langKey = getLangKey(lang);

const galleryImages = galleryData.gallery.map((item: any) => ({
  src: item.image,
  title: item[`title_${langKey}`] || item.title_ca,
  description: item[`description_${langKey}`] || item.description_ca,
}));
---

<main class="pt-24 pb-20">
  <div class="container mx-auto px-4">
    <!-- Header -->
    <div class="text-center mb-12">
      <h1 class="text-4xl md:text-5xl font-heading font-bold mb-4">{translation('gallery.pageTitle')}</h1>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">{translation('gallery.pageSubtitle')}</p>
    </div>

    <!-- Gallery Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-6xl mx-auto">
      {galleryImages.map((image) => (
        <GalleryCard image={image} />
      ))}
    </div>

    <!-- CTA Section -->
    <div class="mt-16 text-center">
      <div class="bg-gradient-to-br from-primary-500 to-primary-700 rounded-2xl p-8 md:p-12 text-white max-w-3xl mx-auto">
        <h2 class="text-2xl md:text-3xl font-heading font-bold mb-4">{translation('gallery.cta.title')}</h2>
        <p class="text-lg mb-6 text-primary-100">{translation('gallery.cta.subtitle')}</p>
        <a href={getLocalizedPath('/#contacto', lang)} class="inline-block bg-white text-primary-600 px-8 py-3 rounded-lg font-semibold hover:bg-primary-50 transition-colors">
          {translation('gallery.cta.button')}
        </a>
      </div>
    </div>
  </div>
</main>
