---
import { getLangFromUrl, useTranslations, getLocalizedPath, getLangKey } from '../i18n/utils';
import galleryData from '../data/gallery.json';

const lang = getLangFromUrl(Astro.url);
const translation = useTranslations(lang);
const langKey = getLangKey(lang);

// Transform gallery data based on current language
const galleryImages = galleryData.gallery.map((item: any) => ({
  src: item.image,
  alt: item[`title_${langKey}`] || item.title_ca,
  description: item[`description_${langKey}`] || item.description_ca,
}));
---

<main class="pt-24 pb-20">
  <div class="container mx-auto px-4">
    <!-- Header -->
    <div class="text-center mb-12">
      <h1 class="text-4xl md:text-5xl font-heading font-bold mb-4">{translation('gallery.pageTitle')}</h1>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">{translation('gallery.pageSubtitle')}</p>
    </div>

    <!-- Gallery Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-6xl mx-auto">
      {galleryImages.map((image) => (
        <div 
          class="relative rounded-2xl overflow-hidden shadow-md cursor-pointer group"
          data-gallery-item
          data-src={image.src}
          data-alt={image.alt}
          data-description={image.description}
        >
          <div class="aspect-[4/3]">
            <img 
              src={image.src} 
              alt={image.alt} 
              class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
              loading="lazy"
            />
          </div>
          <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/20 to-transparent">
            <div class="absolute bottom-0 left-0 right-0 p-6 text-white">
              <h3 class="font-bold text-lg mb-1">{image.alt}</h3>
              <p class="text-sm text-gray-200">{image.description}</p>
            </div>
          </div>
          <!-- Hover overlay with zoom icon -->
          <div class="absolute inset-0 bg-black/0 group-hover:bg-black/20 transition-colors flex items-center justify-center">
            <div class="opacity-0 group-hover:opacity-100 transition-opacity bg-white/90 rounded-full p-3">
              <svg class="w-6 h-6 text-gray-800" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v3m0 0v3m0-3h3m-3 0H7"></path>
              </svg>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- CTA Section -->
    <div class="mt-16 text-center">
      <div class="bg-gradient-to-br from-primary-500 to-primary-700 rounded-2xl p-8 md:p-12 text-white max-w-3xl mx-auto">
        <h2 class="text-2xl md:text-3xl font-heading font-bold mb-4">{translation('gallery.cta.title')}</h2>
        <p class="text-lg mb-6 text-primary-100">{translation('gallery.cta.subtitle')}</p>
        <a href={getLocalizedPath('/#contacto', lang)} class="inline-block bg-white text-primary-600 px-8 py-3 rounded-lg font-semibold hover:bg-primary-50 transition-colors">
          {translation('gallery.cta.button')}
        </a>
      </div>
    </div>
  </div>
</main>
