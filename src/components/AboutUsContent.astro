---
import Layout from '../layouts/Layout.astro';
import Header from './Header.astro';
import Footer from './Footer.astro';
import { Image } from 'astro:assets';
import { getLangFromUrl, useTranslations, getLocalizedPath } from '../i18n/utils';

import galleryImg1 from '../assets/gallery/1.png';
import galleryImg2 from '../assets/gallery/2.png';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

// Valores parametrizados
const values = [
  {
    titleKey: 'about.values.excellence' as const,
    textKey: 'about.values.excellenceText' as const,
    icon: 'M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z'
  },
  {
    titleKey: 'about.values.empathy' as const,
    textKey: 'about.values.empathyText' as const,
    icon: 'M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z'
  },
  {
    titleKey: 'about.values.innovation' as const,
    textKey: 'about.values.innovationText' as const,
    icon: 'M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z'
  },
  {
    titleKey: 'about.values.results' as const,
    textKey: 'about.values.resultsText' as const,
    icon: 'M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z'
  }
];

const teamFeatures = [
  {
    titleKey: 'about.professionals.title' as const,
    textKey: 'about.professionals.description' as const,
    icon: 'M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z'
  },
  {
    titleKey: 'about.technology.title' as const,
    textKey: 'about.technology.description' as const,
    icon: 'M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4'
  },
  {
    titleKey: 'about.personalized.title' as const,
    textKey: 'about.personalized.description' as const,
    icon: 'M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4'
  }
];
---

<Layout title={`${t('aboutUs.pageTitle')} | Axis Cambrils`} description={t('aboutUs.pageSubtitle')}>
  <Header />
  
  <main class="pt-24 pb-20">
    <div class="container mx-auto px-4">
      <!-- Header -->
      <div class="text-center mb-16">
        <h1 class="text-4xl md:text-5xl font-heading font-bold mb-4">{t('aboutUs.pageTitle')}</h1>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">{t('aboutUs.pageSubtitle')}</p>
      </div>

      <!-- History Section -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center mb-20">
        <div class="order-2 lg:order-1">
          <h2 class="text-3xl font-heading font-bold mb-6 text-primary-700">{t('aboutUs.history.title')}</h2>
          <p class="text-lg text-gray-700 leading-relaxed mb-6">
            {t('aboutUs.history.text')}
          </p>
          <p class="text-lg text-gray-700 leading-relaxed">
            {t('about.intro')}
          </p>
        </div>
        <div class="order-1 lg:order-2">
          <div class="rounded-2xl overflow-hidden shadow-xl">
            <Image 
              src={galleryImg1} 
              alt={t('aboutUs.pageTitle')}
              class="w-full h-auto object-cover"
              loading="eager"
            />
          </div>
        </div>
      </div>

      <!-- Mission & Vision -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-20">
        <div class="bg-primary-50 rounded-2xl p-8">
          <div class="w-16 h-16 bg-primary-600 rounded-full flex items-center justify-center mb-6">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-heading font-bold mb-4 text-primary-900">{t('aboutUs.mission.title')}</h3>
          <p class="text-gray-700 leading-relaxed">{t('aboutUs.mission.text')}</p>
        </div>
        <div class="bg-primary-50 rounded-2xl p-8">
          <div class="w-16 h-16 bg-primary-600 rounded-full flex items-center justify-center mb-6">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-heading font-bold mb-4 text-primary-900">{t('aboutUs.vision.title')}</h3>
          <p class="text-gray-700 leading-relaxed">{t('aboutUs.vision.text')}</p>
        </div>
      </div>

      <!-- Values Section -->
      <div class="bg-white rounded-2xl shadow-lg p-8 md:p-12 mb-20">
        <h2 class="text-3xl font-heading font-bold mb-8 text-center">{t('about.values.title')}</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          {values.map((value) => (
            <div class="text-center">
              <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={value.icon}></path>
                </svg>
              </div>
              <h4 class="font-bold text-lg mb-2">{t(value.titleKey)}</h4>
              <p class="text-gray-600 text-sm">{t(value.textKey)}</p>
            </div>
          ))}
        </div>
      </div>

      <!-- Team Section -->
      <div class="mb-20">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-heading font-bold mb-4">{t('aboutUs.team.title')}</h2>
          <p class="text-xl text-gray-600">{t('aboutUs.team.subtitle')}</p>
        </div>
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center">
          <div class="rounded-2xl overflow-hidden shadow-xl">
            <Image 
              src={galleryImg2} 
              alt={t('aboutUs.team.title')}
              class="w-full h-auto object-cover"
              loading="lazy"
            />
          </div>
          <div class="space-y-6">
            {teamFeatures.map((feature) => (
              <div class="flex items-start gap-4">
                <div class="w-12 h-12 bg-primary-600 rounded-full flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={feature.icon}></path>
                  </svg>
                </div>
                <div>
                  <h4 class="font-bold text-lg mb-1">{t(feature.titleKey)}</h4>
                  <p class="text-gray-600">{t(feature.textKey)}</p>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>

      <!-- CTA Section -->
      <div class="text-center">
        <div class="bg-gradient-to-br from-primary-500 to-primary-700 rounded-2xl p-8 md:p-12 text-white max-w-3xl mx-auto">
          <h2 class="text-2xl md:text-3xl font-heading font-bold mb-4">{t('aboutUs.cta.title')}</h2>
          <p class="text-lg mb-6 text-primary-100">{t('aboutUs.cta.subtitle')}</p>
          <a href={getLocalizedPath('/#contacto', lang)} class="inline-block bg-white text-primary-600 px-8 py-3 rounded-lg font-semibold hover:bg-primary-50 transition-colors">
            {t('nav.bookAppointment')}
          </a>
        </div>
      </div>
    </div>
  </main>

  <Footer />
</Layout>
