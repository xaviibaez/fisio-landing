---
import Layout from '../layouts/Layout.astro';
import Header from './Header.astro';
import Footer from './Footer.astro';
import { Image } from 'astro:assets';
import { getLangFromUrl, useTranslations, getLocalizedPath } from '../i18n/utils';

import usImg1 from '../assets/us/1.png';
import usImg2 from '../assets/us/2.png';
import usImg3 from '../assets/us/3.png';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

// Configuración del equipo con las imágenes
const teamConfig = [
  {
    id: 'montse',
    image: usImg3,
    educationCount: 2,
    coursesCount: 8
  },
  {
    id: 'maria',
    image: usImg2,
    educationCount: 2,
    coursesCount: 1
  },
  {
    id: 'vania',
    image: usImg1,
    educationCount: 5,
    coursesCount: 9
  }
];
---

<Layout title={`${t('aboutUs.team.title')} | Axis Cambrils`} description={t('aboutUs.team.subtitle')}>
  <Header />
  
  <main class="pt-24 pb-20">
    <div class="container mx-auto px-4">
      <!-- Team Section -->
      <div class="text-center mb-12">
        <h1 class="text-4xl md:text-5xl font-heading font-bold mb-4">{t('aboutUs.team.title')}</h1>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">{t('aboutUs.team.subtitle')}</p>
      </div>
      
      <!-- Team Members Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
        {teamConfig.map((member) => (
          <div class="bg-white rounded-2xl shadow-lg">
            <div class="aspect-square overflow-hidden rounded-t-2xl">
              <Image 
                src={member.image} 
                alt={t(`team.${member.id}.name`)}
                class="w-full h-full object-cover"
                loading="lazy"
              />
            </div>
            <div class="p-6">
              <h2 class="text-xl font-heading font-bold text-primary-700">{t(`team.${member.id}.name`)}</h2>
              <p class="text-gray-600 mb-4">{t(`team.${member.id}.role`)} · Col. {t(`team.${member.id}.col`)}</p>
              
              <div class="space-y-4 text-sm">
                <div>
                  <h3 class="font-bold text-gray-800 mb-2">{t('aboutUs.team.education')}</h3>
                  <ul class="space-y-1 text-gray-600">
                    {Array.from({ length: member.educationCount }, (_, i) => i + 1).map((num) => (
                      <li class="flex items-start gap-2">
                        <span class="text-primary-500 mt-1">•</span>
                        <span>{t(`team.${member.id}.education.${num}`)}</span>
                      </li>
                    ))}
                  </ul>
                </div>
                
                {member.coursesCount > 0 && (
                  <div>
                    <h3 class="font-bold text-gray-800 mb-2">{t('aboutUs.team.courses')}</h3>
                    <ul class="space-y-1 text-gray-600">
                      {Array.from({ length: member.coursesCount }, (_, i) => i + 1).map((num) => (
                        <li class="flex items-start gap-2">
                          <span class="text-primary-500 mt-1">•</span>
                          <span>{t(`team.${member.id}.courses.${num}`)}</span>
                        </li>
                      ))}
                    </ul>
                  </div>
                )}
              </div>
            </div>
          </div>
        ))}
      </div>

      <!-- CTA Section -->
      <div class="text-center">
        <div class="bg-gradient-to-br from-primary-500 to-primary-700 rounded-2xl p-8 md:p-12 text-white max-w-3xl mx-auto">
          <h2 class="text-2xl md:text-3xl font-heading font-bold mb-4">{t('aboutUs.cta.title')}</h2>
          <p class="text-lg mb-6 text-primary-100">{t('aboutUs.cta.subtitle')}</p>
          <a href={getLocalizedPath('/#contacto', lang)} class="inline-block bg-white text-primary-600 px-8 py-3 rounded-lg font-semibold hover:bg-primary-50 transition-colors">
            {t('nav.bookAppointment')}
          </a>
        </div>
      </div>
    </div>
  </main>

  <Footer />
</Layout>
