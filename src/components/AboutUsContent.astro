---
import Layout from '../layouts/Layout.astro';
import Header from './Header.astro';
import Footer from './Footer.astro';
import { getLangFromUrl, useTranslations, getLocalizedPath } from '../i18n/utils';
import teamData from '../data/team.json';

const lang = getLangFromUrl(Astro.url);
const translation = useTranslations(lang);

// Map language keys
type LangKey = 'ca' | 'es' | 'en';
const langKey = lang as LangKey;

// Transform team data based on current language
const teamConfig = teamData.team.map((member: any) => ({
  id: member.id,
  image: member.image,
  name: member[`name_${langKey}`] || member.name_ca,
  role: member[`role_${langKey}`] || member.role_ca,
  col: member.col,
  education: (member[`education_${langKey}`] || member.education_ca || '').split('\n').filter((e: string) => e.trim()),
  courses: (member[`courses_${langKey}`] || member.courses_ca || '').split('\n').filter((c: string) => c.trim()),
}));
---

<Layout title={`${translation('aboutUs.team.title')} | Axis Cambrils`} description={translation('aboutUs.team.subtitle')}>
  <Header />
  
  <main class="pt-24 pb-20">
    <div class="container mx-auto px-4">
      <!-- Team Section -->
      <div class="text-center mb-12">
        <h1 class="text-4xl md:text-5xl font-heading font-bold mb-4">{translation('aboutUs.team.title')}</h1>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">{translation('aboutUs.team.subtitle')}</p>
      </div>
      
      <!-- Team Members Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
        {teamConfig.map((member) => (
          <div class="bg-white rounded-2xl shadow-lg">
            <div class="aspect-square overflow-hidden rounded-t-2xl">
              <img 
                src={member.image} 
                alt={member.name}
                class="w-full h-full object-cover"
                loading="lazy"
              />
            </div>
            <div class="p-6">
              <h2 class="text-xl font-heading font-bold text-primary-700">{member.name}</h2>
              <p class="text-gray-600 mb-4">{member.role} · Col. {member.col}</p>
              
              <div class="space-y-4 text-sm">
                <div>
                  <h3 class="font-bold text-gray-800 mb-2">{translation('aboutUs.team.education')}</h3>
                  <ul class="space-y-1 text-gray-600">
                    {member.education.map((edu: string) => (
                      <li class="flex items-start gap-2">
                        <span class="text-primary-500 mt-1">•</span>
                        <span>{edu}</span>
                      </li>
                    ))}
                  </ul>
                </div>
                
                {member.courses.length > 0 && (
                  <div>
                    <h3 class="font-bold text-gray-800 mb-2">{translation('aboutUs.team.courses')}</h3>
                    <ul class="space-y-1 text-gray-600">
                      {member.courses.map((course: string) => (
                        <li class="flex items-start gap-2">
                          <span class="text-primary-500 mt-1">•</span>
                          <span>{course}</span>
                        </li>
                      ))}
                    </ul>
                  </div>
                )}
              </div>
            </div>
          </div>
        ))}
      </div>

      <!-- CTA Section -->
      <div class="text-center">
        <div class="bg-gradient-to-br from-primary-500 to-primary-700 rounded-2xl p-8 md:p-12 text-white max-w-3xl mx-auto">
          <h2 class="text-2xl md:text-3xl font-heading font-bold mb-4">{translation('aboutUs.cta.title')}</h2>
          <p class="text-lg mb-6 text-primary-100">{translation('aboutUs.cta.subtitle')}</p>
          <a href={getLocalizedPath('/#contacto', lang)} class="inline-block bg-white text-primary-600 px-8 py-3 rounded-lg font-semibold hover:bg-primary-50 transition-colors">
            {translation('nav.bookAppointment')}
          </a>
        </div>
      </div>
    </div>
  </main>

  <Footer />
</Layout>
