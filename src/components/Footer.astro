---
import { getLangFromUrl, useTranslations, getLocalizedPath } from '../i18n/utils';
import siteSettings from '../data/site-settings.json';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<footer class="bg-gray-900 text-gray-300">
  <div class="container mx-auto px-4 py-12">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- Logo & Description -->
      <div class="md:col-span-2">
        <h3 class="text-2xl font-heading font-bold text-white mb-4">{siteSettings.site.name}</h3>
        <p class="text-gray-400 mb-4">
          {t('footer.description')}
        </p>
      </div>

      <!-- Quick Links -->
      <div>
        <h4 class="text-white font-semibold mb-4">{t('footer.links')}</h4>
        <ul class="space-y-2">
          <li><a href={getLocalizedPath('/#servicios', lang)} class="hover:text-primary-400 transition">{t('nav.services')}</a></li>
          <li><a href={getLocalizedPath('/#nosotros', lang)} class="hover:text-primary-400 transition">{t('nav.about')}</a></li>
          <li><a href={getLocalizedPath('/#contacto', lang)} class="hover:text-primary-400 transition">{t('nav.contact')}</a></li>
          <li><a href={getLocalizedPath('/nosaltres', lang)} class="hover:text-primary-400 transition">{t('nav.aboutUs')}</a></li>
          <li><a href={getLocalizedPath('/blog', lang)} class="hover:text-primary-400 transition">{t('nav.blog')}</a></li>
        </ul>
      </div>

      <!-- Contact Info -->
      <div>
        <h4 class="text-white font-semibold mb-4">{t('footer.contact')}</h4>
        <ul class="space-y-2">
          <li class="flex items-start gap-2">
            <svg class="w-5 h-5 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            <span>{siteSettings.contact.address.street}<br>{siteSettings.contact.address.postalCode} {siteSettings.contact.address.city}, {siteSettings.contact.address.province}</span>
          </li>
          <li class="flex items-center gap-2">
            <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            <a href={`tel:${siteSettings.contact.phone1.replace(/\s/g, '')}`} class="hover:text-primary-400 transition">{siteSettings.contact.phone1}</a>
            <a href={`tel:${siteSettings.contact.phone2.replace(/\s/g, '')}`} class="hover:text-primary-400 transition">{siteSettings.contact.phone2}</a>
          </li>
          <li class="flex items-center gap-2">
            <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            <a href={`mailto:${siteSettings.contact.email}`} class="hover:text-primary-400 transition">{siteSettings.contact.email}</a>
          </li>
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-gray-800 mt-8 pt-8 text-center text-gray-500 text-sm">
      <p>&copy; {new Date().getFullYear()} {siteSettings.site.name}. {t('footer.rights')}</p>
      <p class="mt-2 flex items-center justify-center gap-1">
        Made by: 
        <a href="https://github.com/xaviibaez" target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-1 text-primary-400 hover:text-primary-300 transition">
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
          xaviibaez
        </a>
      </p>
    </div>
  </div>
</footer>
