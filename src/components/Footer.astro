---
import { getLangFromUrl, useTranslations, getLocalizedPath } from '../i18n/utils';
import { siteConfig } from '../config';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<footer class="bg-gray-900 text-gray-300">
  <div class="container mx-auto px-4 py-12">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- Logo & Description -->
      <div class="md:col-span-2">
        <h3 class="text-2xl font-heading font-bold text-white mb-4">Axis Cambrils</h3>
        <p class="text-gray-400 mb-4">
          {t('footer.description')}
        </p>
      </div>

      <!-- Quick Links -->
      <div>
        <h4 class="text-white font-semibold mb-4">{t('footer.links')}</h4>
        <ul class="space-y-2">
          <li><a href={getLocalizedPath('/#servicios', lang)} class="hover:text-primary-400 transition">{t('nav.services')}</a></li>
          <li><a href={getLocalizedPath('/#nosotros', lang)} class="hover:text-primary-400 transition">{t('nav.about')}</a></li>
          <li><a href={getLocalizedPath('/blog', lang)} class="hover:text-primary-400 transition">{t('nav.blog')}</a></li>
          <li><a href={getLocalizedPath('/#contacto', lang)} class="hover:text-primary-400 transition">{t('nav.contact')}</a></li>
        </ul>
      </div>

      <!-- Contact Info -->
      <div>
        <h4 class="text-white font-semibold mb-4">{t('footer.contact')}</h4>
        <ul class="space-y-2">
          <li class="flex items-start gap-2">
            <svg class="w-5 h-5 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            <span>{siteConfig.contact.address.street}<br>{siteConfig.contact.address.postalCode} {siteConfig.contact.address.city}, {siteConfig.contact.address.province}</span>
          </li>
          <li class="flex items-center gap-2">
            <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            <a href={`tel:${siteConfig.contact.phone1.replace(/\s/g, '')}`} class="hover:text-primary-400 transition">{siteConfig.contact.phone1}</a>
            <a href={`tel:${siteConfig.contact.phone2.replace(/\s/g, '')}`} class="hover:text-primary-400 transition">{siteConfig.contact.phone2}</a>
          </li>
          <li class="flex items-center gap-2">
            <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            <a href={`mailto:${siteConfig.contact.email}`} class="hover:text-primary-400 transition">{siteConfig.contact.email}</a>
          </li>
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-gray-800 mt-8 pt-8 text-center text-gray-500 text-sm">
      <p>&copy; {new Date().getFullYear()} Axis Cambrils. {t('footer.rights')}</p>
    </div>
  </div>
</footer>
