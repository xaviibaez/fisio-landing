---
import type { TranslationFunction } from '../i18n/utils';

interface Props {
  lang: string;
  translation: TranslationFunction;
}

const { lang, translation: t } = Astro.props;
const blogUrl = lang === 'ca' ? '/blog' : `/${lang}/blog`;
---

<div class="text-center py-16">
  <svg class="w-24 h-24 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
  </svg>
  <h2 class="text-2xl font-heading font-bold text-gray-700 mb-2">{t('blog.noArticles')}</h2>
  <p class="text-gray-600 mb-6">{t('blog.tryAnother')}</p>
  <a href={blogUrl} class="inline-block bg-primary-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-primary-700 transition">
    {t('blog.viewAll')}
  </a>
</div>
