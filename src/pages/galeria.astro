---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import GalleryModal from '../components/GalleryModal.astro';
import GalleryContent from '../components/GalleryContent.astro';
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout 
  title={`${t('gallery.pageTitle')} | Axis Cambrils - ${lang === 'ca' ? 'Instal·lacions Modernes' : lang === 'es' ? 'Instalaciones Modernas' : 'Modern Facilities'}`} 
  description={t('gallery.pageSubtitle')}
  keywords={lang === 'ca' ? 'galeria fisioteràpia, instal·lacions Axis Cambrils, centre fisioteràpia Cambrils, equipament modern' : lang === 'es' ? 'galería fisioterapia, instalaciones Axis Cambrils, centro fisioterapia Cambrils, equipamiento moderno' : 'physiotherapy gallery, Axis Cambrils facilities, physiotherapy center Cambrils, modern equipment'}
>
  <Header />
  <GalleryContent />
  <Footer />
  <GalleryModal />
</Layout>
