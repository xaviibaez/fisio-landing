---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { getCollection } from 'astro:content';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const allPosts = await getCollection('blog');
const sortedPosts = allPosts.sort((a, b) => b.data.date.getTime() - a.data.date.getTime());

const categories = ['deportiva', 'traumatologica', 'neurologica', 'pediatrica', 'respiratoria', 'geriatrica'];
const selectedCategory = Astro.url.searchParams.get('categoria');

const filteredPosts = selectedCategory 
  ? sortedPosts.filter(post => post.data.category === selectedCategory)
  : sortedPosts;
---

<Layout title={`${t('blog.title')} - Axis Cambrils`} description={t('blog.subtitle')}>
  <Header />
  
  <main class="min-h-screen">
    <!-- Hero Section -->
    <section class="bg-gradient-to-br from-primary-600 via-primary-700 to-primary-800 text-white py-16">
      <div class="container mx-auto px-4">
        <h1 class="text-4xl md:text-5xl font-heading font-bold mb-4">{t('blog.title')}</h1>
        <p class="text-xl text-primary-50 max-w-2xl">
          {t('blog.subtitle')}
        </p>
      </div>
    </section>

    <!-- Category Filter -->
    <section class="bg-white border-b sticky top-16 z-40">
      <div class="container mx-auto px-4 py-6">
        <div class="flex flex-wrap gap-3">
          <a 
            href={lang === 'ca' ? '/blog' : `/${lang}/blog`}
            class={`px-4 py-2 rounded-lg font-medium transition ${!selectedCategory ? 'bg-primary-600 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}`}
          >
            {t('category.todos')}
          </a>
          {categories.map((category) => (
            <a 
              href={lang === 'ca' ? `/blog?categoria=${category}` : `/${lang}/blog?categoria=${category}`}
              class={`px-4 py-2 rounded-lg font-medium transition capitalize ${selectedCategory === category ? 'bg-primary-600 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}`}
            >
              {t(`category.${category}` as any)}
            </a>
          ))}
        </div>
      </div>
    </section>

    <!-- Blog Posts Grid -->
    <section class="py-16 bg-gray-50">
      <div class="container mx-auto px-4">
        {filteredPosts.length === 0 ? (
          <div class="text-center py-16">
            <svg class="w-24 h-24 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            <h2 class="text-2xl font-heading font-bold text-gray-700 mb-2">{t('blog.noArticles')}</h2>
            <p class="text-gray-600 mb-6">{t('blog.tryAnother')}</p>
            <a href={lang === 'ca' ? '/blog' : `/${lang}/blog`} class="inline-block bg-primary-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-primary-700 transition">
              {t('blog.viewAll')}
            </a>
          </div>
        ) : (
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {filteredPosts.map((post) => (
              <article class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-all transform hover:-translate-y-2">
                <div class="bg-gradient-to-br from-primary-500 to-primary-600 h-48 flex items-center justify-center">
                  <svg class="w-20 h-20 text-white opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                  </svg>
                </div>
                <div class="p-6">
                  <div class="mb-3">
                    <a 
                      href={lang === 'ca' ? `/blog?categoria=${post.data.category}` : `/${lang}/blog?categoria=${post.data.category}`}
                      class="inline-block bg-primary-100 text-primary-700 px-3 py-1 rounded-full text-sm font-medium hover:bg-primary-200 transition"
                    >
                      {t(`category.${post.data.category}` as any)}
                    </a>
                  </div>
                  <h2 class="text-xl font-heading font-bold mb-2 line-clamp-2">
                    <a href={lang === 'ca' ? `/blog/${post.slug}` : `/${lang}/blog/${post.slug}`} class="hover:text-primary-600 transition">
                      {post.data.title}
                    </a>
                  </h2>
                  <p class="text-gray-600 mb-4 line-clamp-3">
                    {post.data.description}
                  </p>
                  <div class="flex items-center justify-between text-sm text-gray-500 mb-4">
                    <span class="font-medium">{post.data.author}</span>
                    <time datetime={post.data.date.toISOString()}>
                      {post.data.date.toLocaleDateString(lang === 'ca' ? 'ca-ES' : lang === 'es' ? 'es-ES' : 'en-GB', { year: 'numeric', month: 'short', day: 'numeric' })}
                    </time>
                  </div>
                  <a href={lang === 'ca' ? `/blog/${post.slug}` : `/${lang}/blog/${post.slug}`} class="inline-flex items-center text-primary-600 font-semibold hover:text-primary-700 transition">
                    {t('blog.readMore')}
                    <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                  </a>
                </div>
              </article>
            ))}
          </div>
        )}
      </div>
    </section>
  </main>

  <Footer />
</Layout>
