---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import GalleryModal from '../components/GalleryModal.astro';
import ServiceCard from '../components/ServiceCard.astro';
import { getCollection } from 'astro:content';
import { getLangFromUrl, useTranslations, getLangKey } from '../i18n/utils';
import siteSettings from '../data/site-settings.json';
import galleryData from '../data/gallery.json';

const lang = getLangFromUrl(Astro.url);
const translation = useTranslations(lang);
const langKey = getLangKey(lang);

// Get first 3 gallery images with translations
const galleryPreview = galleryData.gallery.slice(0, 3).map((item: any) => ({
  src: item.image,
  title: item[`title_${langKey}`] || item.title_ca,
  description: item[`description_${langKey}`] || item.description_ca,
}));

const allPosts = await getCollection('blog');
const latestPosts = allPosts
  .sort((a: typeof allPosts[0], b: typeof allPosts[0]) => b.data.date.getTime() - a.data.date.getTime())
  .slice(0, 3);

// Get services in the current language
const allServices = await getCollection('services');
const langPrefix = lang === 'ca' ? 'ca/' : lang === 'es' ? 'es/' : 'en/';
const services = allServices
  .filter((s: typeof allServices[0]) => s.id.startsWith(langPrefix))
  .sort((a: typeof allServices[0], b: typeof allServices[0]) => a.data.order - b.data.order)
  .map((service: typeof allServices[0]) => {
    const slug = service.id.replace(langPrefix, '').replace('.md', '');
    const serviceWord = lang === 'ca' ? 'serveis' : lang === 'es' ? 'servicios' : 'services';
    const href = lang === 'ca' ? `/${serviceWord}/${slug}` : `/${lang}/${serviceWord}/${slug}`;
    
    return {
      title: service.data.title,
      description: service.data.shortDescription,
      features: service.data.benefits.slice(0, 4), // Max 4 features
      href,
      icon: service.data.icon
    };
  });

// Claves de la checklist "What is Physiotherapy"
const generalBenefitsValues = [
  'whatIs.conditions.musculoskeletal',
  'whatIs.conditions.postop',
  'whatIs.conditions.neurological',
  'whatIs.conditions.chronic',
  'whatIs.conditions.respiratory',
  'whatIs.conditions.sports',
] as const;

const whyUsValues = [
  {
    iconPath:
      'M10.394 2.08a1 1 0 00-.788 0l-7 3a1 1 0 000 1.84L5.25 8.051a.999.999 0 01.356-.257l4-1.714a1 1 0 11.788 1.838L7.667 9.088l1.94.831a1 1 0 00.787 0l7-3a1 1 0 000-1.838l-7-3zM3.31 9.397L5 10.12v4.102a8.969 8.969 0 00-1.05-.174 1 1 0 01-.89-.89 11.115 11.115 0 01.25-3.762zM9.3 16.573A9.026 9.026 0 007 14.935v-3.957l1.818.78a3 3 0 002.364 0l5.508-2.361a11.026 11.026 0 01.25 3.762 1 1 0 01-.89.89 8.968 8.968 0 00-5.35 2.524 1 1 0 01-1.4 0zM6 18a1 1 0 001-1v-2.065a8.935 8.935 0 00-2-.712V17a1 1 0 001 1z',
    titleKey: 'about.professionals.title',
    descriptionKey: 'about.professionals.description',
  },
  {
    iconPath:
      'M11.3 1.046A1 1 0 0112 2v5h4a1 1 0 01.82 1.573l-7 10A1 1 0 018 18v-5H4a1 1 0 01-.82-1.573l7-10a1 1 0 011.12-.38z',
    titleKey: 'about.technology.title',
    descriptionKey: 'about.technology.description',
  },
  {
    iconPath:
      'M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z',
    titleKey: 'about.personalized.title',
    descriptionKey: 'about.personalized.description',
  },
] as const;

const prideValues = [
  { titleKey: 'about.values.excellence', textKey: 'about.values.excellenceText' },
  { titleKey: 'about.values.empathy', textKey: 'about.values.empathyText' },
  { titleKey: 'about.values.innovation', textKey: 'about.values.innovationText' },
  { titleKey: 'about.values.results', textKey: 'about.values.resultsText' },
] as const;

const testimonialsValues = [
  {
    initials: 'MC',
    textKey: 'testimonials.patient1.text',
    nameKey: 'testimonials.patient1.name',
    infoKey: 'testimonials.patient1.info',
  },
  {
    initials: 'JS',
    textKey: 'testimonials.patient2.text',
    nameKey: 'testimonials.patient2.name',
    infoKey: 'testimonials.patient2.info',
  },
  {
    initials: 'AG',
    textKey: 'testimonials.patient3.text',
    nameKey: 'testimonials.patient3.name',
    infoKey: 'testimonials.patient3.info',
  },
] as const;
---

<Layout title={`${siteSettings.site.name} - ${translation('hero.subtitle')}`}>
  <Header />
  
  <main>
    <!-- Hero Section -->
    <section class="relative bg-gradient-to-br from-primary-600 via-primary-700 to-primary-800 text-white py-20 md:py-32 overflow-hidden">
      <!-- Animated waves background -->
      <div class="absolute inset-0 overflow-hidden">
        <svg class="absolute bottom-0 left-0 w-[200%] h-64 md:h-80 animate-wave" viewBox="0 0 1440 320" preserveAspectRatio="none">
          <path fill="rgba(255,255,255,0.1)" d="M0,160L48,176C96,192,192,224,288,213.3C384,203,480,149,576,138.7C672,128,768,160,864,181.3C960,203,1056,213,1152,197.3C1248,181,1344,139,1392,117.3L1440,96L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"></path>
        </svg>
        <svg class="absolute bottom-0 left-0 w-[200%] h-52 md:h-72 animate-wave-slow" viewBox="0 0 1440 320" preserveAspectRatio="none">
          <path fill="rgba(255,255,255,0.15)" d="M0,64L48,80C96,96,192,128,288,128C384,128,480,96,576,90.7C672,85,768,107,864,128C960,149,1056,171,1152,165.3C1248,160,1344,128,1392,112L1440,96L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"></path>
        </svg>
        <svg class="absolute bottom-0 left-0 w-[200%] h-44 md:h-64 animate-wave-slower" viewBox="0 0 1440 320" preserveAspectRatio="none">
          <path fill="rgba(255,255,255,0.08)" d="M0,224L48,213.3C96,203,192,181,288,181.3C384,181,480,203,576,218.7C672,235,768,245,864,234.7C960,224,1056,192,1152,181.3C1248,171,1344,181,1392,186.7L1440,192L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"></path>
        </svg>
      </div>

      <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-3xl">
          <h1 class="text-4xl md:text-6xl font-heading font-bold mb-6">
            {translation('hero.title')}
          </h1>
          <p class="text-xl md:text-2xl mb-8 text-primary-50">
            {translation('hero.subtitle')}
          </p>
          <div class="flex justify-center md:hidden">
            <a href="#contacto" class="inline-block bg-white text-primary-600 px-8 py-4 rounded-lg font-semibold hover:bg-primary-50 transition-all transform hover:scale-105 text-center">
              {translation('hero.cta')}
            </a>
          </div>
        </div>
      </div>
      <div class="absolute bottom-0 left-0 right-0 z-10">
        <svg viewBox="0 0 1440 120" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M0 120L60 110C120 100 240 80 360 70C480 60 600 60 720 65C840 70 960 80 1080 85C1200 90 1320 90 1380 90L1440 90V120H1380C1320 120 1200 120 1080 120C960 120 840 120 720 120C600 120 480 120 360 120C240 120 120 120 60 120H0Z" fill="white"/>
        </svg>
      </div>
    </section>

    <style>
      @keyframes wave {
        0% { transform: translateX(0); }
        100% { transform: translateX(-50%); }
      }
      @keyframes wave-reverse {
        0% { transform: translateX(-50%); }
        100% { transform: translateX(0); }
      }
      .animate-wave {
        animation: wave 15s linear infinite;
      }
      .animate-wave-slow {
        animation: wave-reverse 20s linear infinite;
      }
      .animate-wave-slower {
        animation: wave 25s linear infinite;
      }
    </style>

    <!-- What is Physiotherapy Section -->
    <section class="py-20 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <!-- Title -->
          <h2 class="text-4xl md:text-5xl font-heading font-bold mb-6 text-center">{translation('whatIs.title')}</h2>
          
          <!-- Description -->
          <p class="text-xl text-gray-700 leading-relaxed mb-10 text-center">
            {translation('whatIs.description')}
          </p>

          <!-- Conditions subtitle -->
          <h3 class="text-2xl font-heading font-semibold mb-6 text-primary-700">{translation('whatIs.conditions.title')}</h3>
          
          <!-- Checklist - 2 columns on large screens -->
          <ul class="grid grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-4 mb-10">
            {generalBenefitsValues.map((key) => (
              <li class="flex items-start gap-3">
                <svg class="w-6 h-6 text-primary-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span class="text-gray-700">{translation(key)}</span>
              </li>
            ))}
          </ul>

          <!-- Techniques banner -->
          <div class="bg-gradient-to-br from-primary-500 to-primary-700 rounded-2xl p-8 text-white text-center">
            <p class="text-lg leading-relaxed">
              {translation('whatIs.techniques')}
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Services Section -->
    <section id="servicios" class="py-20 bg-white">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <h2 class="text-4xl md:text-5xl font-heading font-bold mb-4">{translation('services.title')}</h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            {translation('services.subtitle')}
          </p>
        </div>

        <div class="max-w-8xl mx-auto grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-10">
          {services.map((service: typeof services[0]) => (
            <ServiceCard
              title={service.title}
              description={service.description}
              features={service.features}
              href={service.href}
              icon={service.icon}
            />
          ))}
        </div>
      </div>
    </section>

    <!-- About Section -->
    <section id="nosotros" class="py-20 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <div>
            <h2 class="text-4xl md:text-5xl font-heading font-bold mb-6">{translation('about.title')}</h2>
            <p class="text-xl text-gray-600 mb-4">{translation('about.subtitle')}</p>
            <p class="text-lg text-gray-500 mb-8">{translation('about.intro')}</p>
            
            <div class="space-y-6">
              {whyUsValues.map((pillar) => (
                <div class="flex gap-4">
                  <div class="flex-shrink-0 w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 text-primary-600" fill="currentColor" viewBox="0 0 20 20">
                      <path d={pillar.iconPath}></path>
                    </svg>
                  </div>
                  <div>
                    <h3 class="text-xl font-bold mb-2">{translation(pillar.titleKey)}</h3>
                    <p class="text-gray-600">{translation(pillar.descriptionKey)}</p>
                  </div>
                </div>
              ))}
            </div>
          </div>

          <div class="bg-gradient-to-br from-primary-500 to-primary-700 rounded-2xl p-8 text-white">
            <h3 class="text-3xl font-heading font-bold mb-6">{translation('about.values.title')}</h3>
            <ul class="space-y-4 text-lg">
              {prideValues.map((value) => (
                <li class="flex items-start gap-3">
                  <svg class="w-6 h-6 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path
                      fill-rule="evenodd"
                      d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                      clip-rule="evenodd"
                    ></path>
                  </svg>
                  <span>
                    <strong>{translation(value.titleKey)}</strong> {translation(value.textKey)}
                  </span>
                </li>
              ))}
            </ul>
          </div>
        </div>

        <!-- Gallery Preview -->
        <div class="mt-16">
          <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-8">
            <div>
              <h3 class="text-2xl font-heading font-bold mb-2">{translation('gallery.title')}</h3>
              <p class="text-gray-600">{translation('gallery.subtitle')}</p>
            </div>
            <a href={lang === 'ca' ? '/galeria' : lang === 'en' ? '/en/gallery' : '/es/galeria'} class="mt-4 md:mt-0 inline-flex items-center gap-2 text-primary-600 font-semibold hover:text-primary-700 transition-colors">
              {translation('gallery.viewAll')}
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
              </svg>
            </a>
          </div>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            {galleryPreview.map((image) => (
              <div 
                class="relative rounded-xl overflow-hidden shadow-md aspect-[4/3] cursor-pointer group"
                data-gallery-item
                data-src={image.src}
                data-alt={image.title}
                data-description={image.description}
              >
                <img src={image.src} alt={image.title} class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105" loading="lazy" />
                <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/20 to-transparent">
                  <div class="absolute bottom-0 left-0 right-0 p-4 text-white">
                    <h3 class="font-bold text-lg mb-1">{image.title}</h3>
                    <p class="text-sm text-gray-200">{image.description}</p>
                  </div>
                </div>
                <div class="absolute inset-0 bg-black/0 group-hover:bg-black/20 transition-colors flex items-center justify-center">
                  <div class="opacity-0 group-hover:opacity-100 transition-opacity bg-white/90 rounded-full p-3">
                    <svg class="w-6 h-6 text-gray-800" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v3m0 0v3m0-3h3m-3 0H7"></path>
                    </svg>
                  </div>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Blog Preview Section -->
    <section class="py-20 bg-white">
      <div class="container mx-auto px-4">
        <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-16">
          <div class="text-center md:text-left">
            <h2 class="text-4xl md:text-5xl font-heading font-bold mb-4">{translation('blog.title')}</h2>
            <p class="text-xl text-gray-600 max-w-2xl">{translation('blog.subtitle')}</p>
          </div>
          <a href="/blog" class="mt-4 md:mt-0 inline-flex items-center gap-2 text-primary-600 font-semibold hover:text-primary-700 transition-colors">
            {translation('blog.viewAll')}
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {latestPosts.map((post: typeof latestPosts[0]) => (
            <article class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-all transform hover:-translate-y-2">
              <div class="bg-gradient-to-br from-primary-500 to-primary-600 h-48 flex items-center justify-center">
                <svg class="w-20 h-20 text-white opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
              </div>
              <div class="p-6">
                <div class="mb-3">
                  <span class="inline-block bg-primary-100 text-primary-700 px-3 py-1 rounded-full text-sm font-medium">
                    {translation(`category.${post.data.category}` as any)}
                  </span>
                </div>
                <h3 class="text-xl font-heading font-bold mb-2 line-clamp-2">{post.data.title}</h3>
                <p class="text-gray-600 mb-4 line-clamp-3">{post.data.description}</p>
                <div class="flex items-center justify-between text-sm text-gray-500 mb-4">
                  <span>{post.data.author}</span>
                  <time datetime={post.data.date.toISOString()}>
                    {post.data.date.toLocaleDateString(lang === 'ca' ? 'ca-ES' : lang === 'es' ? 'es-ES' : 'en-GB', { year: 'numeric', month: 'short', day: 'numeric' })}
                  </time>
                </div>
                <a href={`/blog/${post.slug}`} class="inline-flex items-center text-primary-600 font-semibold hover:text-primary-700 transition">
                  {translation('blog.readMore')}
                  <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </a>
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>

    <!-- Testimonials Section -->
    <section class="py-20 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <h2 class="text-4xl md:text-5xl font-heading font-bold mb-4">{translation('testimonials.title')}</h2>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {testimonialsValues.map((testimonial) => (
            <div class="bg-white rounded-xl shadow-lg p-8">
              <div class="flex items-center gap-1 mb-4">
                {[...Array(5)].map(() => (
                  <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                  </svg>
                ))}
              </div>
              <p class="text-gray-700 mb-6 italic">{translation(testimonial.textKey)}</p>
              <div class="flex items-center gap-3">
                <div class="w-12 h-12 bg-primary-200 rounded-full flex items-center justify-center">
                  <span class="text-primary-700 font-bold text-lg">{testimonial.initials}</span>
                </div>
                <div>
                  <p class="font-semibold">{translation(testimonial.nameKey)}</p>
                  <p class="text-sm text-gray-600">{translation(testimonial.infoKey)}</p>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Contact Section -->
    <section id="contacto" class="py-20 bg-white">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <h2 class="text-4xl md:text-5xl font-heading font-bold mb-4">{translation('contact.title')}</h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">{translation('contact.subtitle')}</p>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
          <!-- Contact Form -->
          <div class="bg-gray-50 rounded-2xl p-8">
            <h3 class="text-2xl font-heading font-bold mb-6">{translation('contact.form.title')}</h3>
            <form class="space-y-6">
              <div>
                <label for="name" class="block text-sm font-semibold text-gray-700 mb-2">{translation('contact.form.name')}</label>
                <input type="text" id="name" name="name" class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary-500 focus:border-transparent outline-none transition" placeholder={translation('contact.form.namePlaceholder')} required>
              </div>
              <div>
                <label for="email" class="block text-sm font-semibold text-gray-700 mb-2">{translation('contact.form.email')}</label>
                <input type="email" id="email" name="email" class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary-500 focus:border-transparent outline-none transition" placeholder={translation('contact.form.emailPlaceholder')} required>
              </div>
              <div>
                <label for="phone" class="block text-sm font-semibold text-gray-700 mb-2">{translation('contact.form.phone')}</label>
                <input type="tel" id="phone" name="phone" class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary-500 focus:border-transparent outline-none transition" placeholder={translation('contact.form.phonePlaceholder')}>
              </div>
              <div>
                <label for="message" class="block text-sm font-semibold text-gray-700 mb-2">{translation('contact.form.message')}</label>
                <textarea id="message" name="message" rows="4" class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary-500 focus:border-transparent outline-none transition resize-none" placeholder={translation('contact.form.messagePlaceholder')} required></textarea>
              </div>
              <button type="submit" class="w-full bg-primary-600 text-white px-8 py-4 rounded-lg font-semibold hover:bg-primary-700 transition-all transform hover:scale-105">
                {translation('contact.form.submit')}
              </button>
            </form>
          </div>

          <!-- Contact Info & Map -->
          <div class="space-y-8">
            <div class="bg-gray-50 rounded-2xl p-8">
              <h3 class="text-2xl font-heading font-bold mb-6">{translation('contact.info.title')}</h3>
              <div class="space-y-6">
