---
import { Image } from 'astro:assets';
import Layout from './Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const { frontmatter } = Astro.props;
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const images = import.meta.glob<{ default: ImageMetadata }>('/src/assets/services/*.{jpeg,jpg,png,gif,webp}');
const imagePath = frontmatter.image?.replace('/images/', '/src/assets/services/');
const imageModule = imagePath && images[imagePath] ? await images[imagePath]() : null;
---

<Layout title={`${frontmatter.title} - Axis Cambrils`} description={frontmatter.shortDescription}>
  <Header />
  
  <main class="min-h-screen">
    <!-- Hero Section -->
    <section class="bg-gradient-to-br from-primary-600 via-primary-700 to-primary-800 text-white py-16">
      <div class="container mx-auto px-4">
        <h1 class="text-4xl md:text-5xl font-heading font-bold mb-4">{frontmatter.title}</h1>
        <p class="text-xl text-primary-50 max-w-2xl">
          {frontmatter.shortDescription}
        </p>
      </div>
    </section>

    <!-- Main Content -->
    <article class="py-16 bg-white">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
          <!-- Image & Description Grid -->
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-12 items-start">
            {imageModule && (
              <div class="rounded-xl overflow-hidden shadow-lg lg:sticky lg:top-8">
                <Image 
                  src={imageModule.default} 
                  alt={frontmatter.title}
                  class="w-full h-auto object-cover"
                  loading="lazy"
                />
              </div>
            )}
            
            <div>
              <!-- Description -->
              <div class="prose prose-lg max-w-none mb-8">
                <p class="text-xl text-gray-700 leading-relaxed">
                  {frontmatter.description}
                </p>
              </div>

              <!-- Benefits Section -->
              {frontmatter.benefits && frontmatter.benefits.length > 0 && (
                <div class="bg-primary-50 rounded-xl p-6">
                  <h2 class="text-2xl font-heading font-bold mb-4 text-primary-900">{t('service.benefits')}</h2>
                  <ul class="space-y-3">
                    {frontmatter.benefits.map((benefit: string) => (
                      <li class="flex items-start gap-3">
                        <svg class="w-6 h-6 text-primary-600 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                        </svg>
                        <span class="text-gray-700">{benefit}</span>
                      </li>
                    ))}
                  </ul>
                </div>
              )}
            </div>
          </div>

          <!-- Main Content from Markdown -->
          <div class="prose prose-lg max-w-none mb-12">
            <slot />
          </div>

          <!-- Process Section -->
          {frontmatter.process && frontmatter.process.length > 0 && (
            <div class="mb-12">
              <h2 class="text-3xl font-heading font-bold mb-8">{t('service.process')}</h2>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                {frontmatter.process.map((item: any, index: number) => (
                  <div class="bg-gray-50 rounded-xl p-6 border-l-4 border-primary-600">
                    <div class="flex items-center gap-3 mb-3">
                      <span class="w-8 h-8 bg-primary-600 text-white rounded-full flex items-center justify-center font-bold text-sm">
                        {index + 1}
                      </span>
                      <h3 class="text-xl font-bold text-gray-900">{item.step}</h3>
                    </div>
                    <p class="text-gray-600">{item.description}</p>
                  </div>
                ))}
              </div>
            </div>
          )}

          <!-- Duration & Price -->
          {(frontmatter.duration || frontmatter.price) && (
            <div class="mb-12 grid grid-cols-1 md:grid-cols-2 gap-6">
              {frontmatter.duration && (
                <div class="bg-white border-2 border-primary-200 rounded-xl p-6">
                  <div class="flex items-center gap-3 mb-2">
                    <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <h3 class="text-lg font-bold text-gray-900">{t('service.duration')}</h3>
                  </div>
                  <p class="text-2xl font-semibold text-primary-600">{frontmatter.duration}</p>
                </div>
              )}
              {frontmatter.price && (
                <div class="bg-white border-2 border-primary-200 rounded-xl p-6">
                  <div class="flex items-center gap-3 mb-2">
                    <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <h3 class="text-lg font-bold text-gray-900">{t('service.price')}</h3>
                  </div>
                  <p class="text-2xl font-semibold text-primary-600">{frontmatter.price}</p>
                </div>
              )}
            </div>
          )}
        </div>
      </div>
    </article>
  </main>

  <Footer />
</Layout>
